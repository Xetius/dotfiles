# kubectl
alias k='kubectl'
alias -g JQ="| jaq -CRr '. as \$line | try (fromjson | [\"\u001b[33m\"+(.ts|fromdateiso8601|strftime(\"%Y-%m-%d %H:%M:%S\")), (if .level==\"info\" then \"\u001b[32m\"+.level elif .level==\"warn\" then \"\u001b[33m\"+.level elif .level==\"error\" then \"\u001b[31m\"+.level else \"\u001b[37m\"+.level end), \"\u001b[37m\"+.msg] | @tsv) catch \$line'"
