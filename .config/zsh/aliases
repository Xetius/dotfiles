# ls
alias ls='eza --color=auto --icons'
alias ll='ls -la --git --git-repos'
alias llt='ll -T'
alias lld='ll -D'

# vim
alias vim='nvim'

# git
alias gst='git status'
alias gpr='git pull -r'

# kubectl
alias k='kubectl'

# microk8s
alias mk='microk8s'
alias mke='microk8s enable'
alias mkd='microk8s disable'
alias mkst='microk8s status'
alias mkup='microk8s start'
alias mkdn='microk8s stop'
alias mkrs='microk8s reset'
alias mkvs='microk8s version'
alias mkcl='microk8s config'
alias mkk='microk8s kubectl'

# miscellaneous
alias vc='vim ~/.zshrc'
alias sa='source ~/.zshrc'
alias stowd='pushd ~/dotfiles && stow . && popd'

